<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Salesman>    
            <version>1.0.0</version>
        </Ccc_Salesman>
    </modules>
    <frontend>
        <routers>
          <salesman>
                <use>standard</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
        <layout>
            <updates>
                <Salesman module="Ccc_Salesman">
                    <file>Ccc_Salesman.xml</file>
                </Salesman>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <salesman>
                <class>Ccc_Salesman_Model</class>
                <resourceModel>salesman_resource</resourceModel>
            </salesman>
            <salesman_resource>
                <class>Ccc_Salesman_Model_Resource</class>
                <deprecatedNode>salesman_mysql4</deprecatedNode>
                <entities>
                    <salesman>
                        <table>salesman</table>
                    </salesman>
                </entities>
            </salesman_resource>
        </models>
        <blocks>
            <salesman>
                <class>Ccc_Salesman_Block</class>
            </salesman>
        </blocks>
        <helpers>
           <salesman>
                  <class>Ccc_Salesman_Helper</class>
            </salesman>
        </helpers>
    </global>
    <admin>
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
        <layout>
            <updates>
                <salesman>
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>
    </admin>
</config>